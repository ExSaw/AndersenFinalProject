<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:angle="90"
        android:startColor="@color/blue"
        android:endColor="@color/green">
    </gradient>

    <stroke
        android:color="@color/green"
        android:width="1dp">
    </stroke>

    <corners
        android:radius="12dp">
    </corners>

    <padding
        android:bottom="0dp"
        android:top="0dp"
        android:right="14dp"
        android:left="14dp">
    </padding>


</shape>